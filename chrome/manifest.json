{
  "manifest_version": 3,
  "name": "LinkQueue",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko_android": {},
    "gecko": {
      "id": "{2c91a2e5-cfb6-432e-88bd-6b0f4b7aea5b}"
    }
  },

  "description": "Add links to a list that you can open in a toolbar popup instead of opening too many tabs for your browser to handle.",
  "permissions": ["storage", "tabs", "downloads", "contextMenus"],
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
